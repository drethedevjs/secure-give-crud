{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",

    "lib": ["es2021"],
    "module": "Node16",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16"
  },
  "files": ["server.ts"],
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}